{
  "name": "cryptforge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js",
    "dev:lean": "./scripts/lean-dev.sh",
    "build": "node ./node_modules/typescript/bin/tsc && node ./node_modules/vite/bin/vite.js build",
    "preview": "node ./node_modules/vite/bin/vite.js preview",
    "tauri": "node ./node_modules/@tauri-apps/cli/tauri.js",
    "clean:heavy": "./scripts/cleanup-heavy.sh",
    "clean:full": "./scripts/cleanup-full.sh",
    "verify:frontend": "npm run build",
    "verify:rust": "cargo test --manifest-path src-tauri/Cargo.toml",
    "verify": "npm run verify:frontend && npm run verify:rust"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
